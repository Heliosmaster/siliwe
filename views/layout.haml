!!!
%html
  %head
    %title= @title
    %link{:href=>"/css/bootstrap.css", :rel => "stylesheet", :media => "screen"}
    %link{:href=>"/css/style.css", :rel => "stylesheet", :media => "screen"}
  %body
  .navbar
    .navbar-inner
      .container
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => "/"} Siliwe
        .nav-collapse
          %ul.nav
            %li.active
              %a{:href => "/"} Home
  .container
    %p.text-error{ :style => 'text-align:center;'}= flash[:error]
    %p.text-info{ :style => 'text-align:center;'}= flash[:notice]
    %p.text-success{ :style => 'text-align:center;'}= flash[:success]
    %p{ :style => 'text-align:right;'}
      - if logged_in?
        Logged in as 
        %b="#{current_user.name}"
        %a.btn.btn-primary{:href=>"/logout"} logout
      - else
        %a.btn.btn-primary{:href=>"/auth/google_oauth2"} Login / Signup
      = yield