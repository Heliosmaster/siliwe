!!!
%html
  %head
    %title= @title
    %link{:href=>"/css/bootstrap.css", :rel => "stylesheet", :media => "screen"}
    %link{:href=>"/css/style.css", :rel => "stylesheet", :media => "screen"}
  %body
  .navbar
    .navbar-inner
      .container
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => "/"} Siliwe
        .nav-collapse
          %ul.nav
            %li.active
              %a{:href => "/"} Home
  .container
    %p{ :style => 'text-align:center;'}= flash[:notice]
    %p{ :style => 'text-align:right;'}
      - if logged_in?
        logged in as 
        %a{:href=>"/users/#{current_user.id}"}="#{current_user.name}."
        %a{:href=>"/logout"} logout
      - else
        %a{:href=>"/login"}Login
        |
        %a{:href=>"/signup"}Register
      = yield