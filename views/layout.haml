%html
  %head
    %title= @title
    %link{:href=>"/css/bootstrap.css", :rel => "stylesheet", :media => "screen"}
    %link{:href=>"/css/style.css", :rel => "stylesheet", :media => "screen"}
    %script{:src => "http://code.jquery.com/jquery.js"}
    %script{:src => "js/bootstrap.min.js"}    
  %body
  #wrap
    .navbar
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          //%a.brand{:href => "/"} Siliwe
          .nav-collapse
            %ul.nav
              %li
                %a{:href => "/"} Home
    .container
      - if !flash[:error].nil?
        %p.alert.alert-error.text-error{ :style => 'text-align:center;'}= flash[:error]
      - if !flash[:notice].nil?
        %p.alert.alert-info.text-info{ :style => 'text-align:center;'}= flash[:notice]
      - if !flash[:success].nil?
        %p.alert.alert-success.text-success{ :style => 'text-align:center;'}= flash[:success]
      %p{ :style => 'text-align:right;'}
        - if logged_in?
          Logged in as 
          %b="#{current_user.name}"
          %a.btn.btn-primary{:href=>"/logout"} logout
        - else
          %a.btn.btn-primary{:href=>"/auth/google_oauth2"} Login / Signup
      = yield
    #push
  %footer
    %p 
      Siliwe - 2013 - It's all
      %a{:href=>"http://github.com/Heliosmaster"} his
      fault